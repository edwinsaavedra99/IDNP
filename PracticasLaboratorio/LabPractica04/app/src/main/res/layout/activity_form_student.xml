<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootLayout"
    tools:context=".Activity.FormStudentActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <TextView
            android:text="@string/form_title"
            android:textSize="36sp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="@string/form_subTitle"
            android:textSize="36sp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="@string/form_titleForm"
            android:textSize="16sp"
            android:id="@+id/titleForm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="@string/form_titleForm"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal|center_vertical"
        android:orientation="vertical">


        <EditText
            android:hint="@string/name"
            android:inputType="text"
            android:id="@+id/txt_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            tools:ignore="LabelFor" />
        <EditText
            android:hint="@string/last_name"
            android:inputType="text"
            android:id="@+id/txt_user_lastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/txt_user_lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/form_hintLastName"
            android:inputType="text" />

        <EditText
            android:hint="@string/form_hintEmail"
            android:inputType="textEmailAddress"
            android:id="@+id/txt_user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="" />


        <EditText
            android:hint="@string/form_hintCUI"
            android:inputType="number"
            android:id="@+id/txt_user_CUI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="" />



    </LinearLayout>
    <TextView
        android:id="@+id/txt_rider_app"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/form_author"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_above="@+id/txt_rider_app"
        android:layout_margin="16dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_margin="15dp"
            android:background="@color/colorPrimary"
            android:id="@+id/btnRegister"
            android:textColor="@android:color/white"
            android:text="@string/form_textButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            tools:ignore="ButtonStyle">
        </Button>
        <Button
            android:layout_margin="15dp"
            android:background="#828388"
            android:id="@+id/btnCancelar"
            android:textColor="@android:color/white"
            android:text="@string/cancelar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            tools:ignore="ButtonStyle">
        </Button>
    </LinearLayout>

</RelativeLayout>