<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="view.fragments.MapsFragment2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:baselineAligned="false">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp">

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="123dp"
                        android:layout_marginEnd="354dp"
                        app:srcCompat="@drawable/arrow_left" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="123dp"
                        android:layout_marginEnd="40dp"
                        app:srcCompat="@drawable/arrow_right" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="238dp"
                        android:layout_height="207dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="27dp"
                        android:layout_marginEnd="84dp"
                        tools:src="@drawable/circle" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="92dp"
                        android:layout_marginEnd="147dp"
                        android:fontFamily="@font/ubuntu_bold"
                        android:text="00:01:00"
                        android:textAlignment="center"
                        android:textColor="#7E604F"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/textView25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="176dp"
                        android:layout_marginBottom="152dp"
                        android:text="Duracion" />

                    <TextView
                        android:id="@+id/distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="189dp"
                        android:layout_marginBottom="109dp"
                        android:text="0.20"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="185dp"
                        android:layout_marginBottom="91dp"
                        android:text="(km))" />

                    <TextView
                        android:id="@+id/textView28"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="50dp"
                        android:layout_marginBottom="59dp"
                        android:text="0.9" />

                    <TextView
                        android:id="@+id/textView29"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="50dp"
                        android:layout_marginBottom="59dp"
                        android:text="03:00" />

                    <TextView
                        android:id="@+id/textView30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="41dp"
                        android:layout_marginBottom="28dp"
                        android:text="(min/km)" />

                    <TextView
                        android:id="@+id/textView31"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="41dp"
                        android:layout_marginBottom="28dp"
                        android:text="(Kcal)" />

                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="10dp"
                android:background="#BE4F10"
                android:orientation="vertical">

            </LinearLayout>
            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/floatingPlayButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="top|end"
                    android:clickable="true"
                    app:srcCompat="@drawable/play"
                    android:focusable="true"
                    android:backgroundTint="@color/colorPrimary"
                    android:contentDescription="TODO" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/floatingMetaButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="bottom|start"
                    android:clickable="true"
                    app:srcCompat="@drawable/finish_flag"
                    android:focusable="true"
                    android:backgroundTint="@color/white"
                    android:contentDescription="TODO" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/floatingPauseButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="bottom|end"
                    android:clickable="true"
                    app:srcCompat="@drawable/pause"
                    android:focusable="true"
                    android:backgroundTint="@color/colorPrimary"
                    android:contentDescription="TODO" />

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                </androidx.fragment.app.FragmentContainerView>

            </androidx.coordinatorlayout.widget.CoordinatorLayout>

        </LinearLayout>
    </RelativeLayout>
</FrameLayout>