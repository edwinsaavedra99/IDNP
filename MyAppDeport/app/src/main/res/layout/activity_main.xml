<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activitys.MainActivity"
    android:background="@drawable/fondo_app">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="151dp"
        android:layout_height="154dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="128dp"
        android:layout_marginTop="66dp"
        app:srcCompat="@drawable/ic_runer"
        app:tint="#FFF" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="204dp"
        android:fontFamily="@font/ubuntu_bold"
        android:text="MyAppDeport"
        android:textColor="#FFF"
        android:textSize="40sp" />

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="248dp"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="60dp"
        android:background="@drawable/button_rounded_v2"
        android:fontFamily="@font/ubuntu"
        android:text="Iniciar Sesión"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="25sp" />

    <Button
        android:id="@+id/registrate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="183dp"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="60dp"
        android:background="@drawable/button_rounded"
        android:backgroundTint="#FFF"
        android:text="Registrate"
        android:textAllCaps="false"
        android:textColor="#BE4F10"
        android:textSize="25sp"
        android:fontFamily="@font/ubuntu"/>

    <Button
        android:id="@+id/anonimo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/button_rounded_v2"
        android:fontFamily="@font/ubuntu"
        android:text="Usuario Anónimo"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="25sp"/>

</RelativeLayout>